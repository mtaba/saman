
@model IEnumerable<saman.Models.DomainModels.Person>



<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">لیست بازنشسته ها</h3>
            </div>
            <div class="box-body">

                <table id="personListTable" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(Model => Model.Name)</th>
                            <th>@Html.DisplayNameFor(Model => Model.Family)</th>
                            <th>@Html.DisplayNameFor(Model => Model.FatherName)</th>
                            <th>@Html.DisplayNameFor(Model => Model.CodeMelli)</th>
                            <th>@Html.DisplayNameFor(Model => Model.CompanyId)</th>
                            <th>عملیات</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(Model => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => item.Family)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => item.FatherName)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => item.CodeMelli)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => item.CompanyId)
                                </td>
                                <td>

                                    @Html.ActionLink("انتخاب", "Index", "Dependents", new { id = item.CodeMelli }, new { })

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

