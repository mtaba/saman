
@model IEnumerable<saman.Models.DomainModels.Prescription>

<div class="row">
    <div class="col-md-12">
        <div class="form-horizontal box box-primary">

            <div class="box-heade">
                <h4 class="box-title">آخرین نسخه های اضافه شده</h4>
            </div>

            <div class="box-body">

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Person.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Person.LName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Payable)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SentDate)
                        </th>


                        <th>
                            @Html.DisplayNameFor(model => model.TreatmentType.Value)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Person.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Person.LName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Payable)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SentDate)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.TreatmentType.Value)
                            </td>
                            <td>
                                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("جزئیات", "Details", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>




