@model saman.VIewModels.PrescriptionViewModel

@{
    ViewBag.Title = "جستجوی خسارت درمان";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@section styles{
    @Styles.Render("~/Styles/calendar")
}
<div class="row">
    <div class="col-md-12">
        @using (Ajax.BeginForm("Search", "Prescriptions", new AjaxOptions { UpdateTargetId = "Presclist", HttpMethod = "Post", InsertionMode = InsertionMode.Replace }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal box box-primary">
                <div class="box-body">
                    <hr />
                    <div class="box-heade">
                        <h4 class="box-title">مشخصات بیمه شده</h4>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Prescription.PersonId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Prescription.PersonId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Prescription.PersonId, "", new { @class = "text-danger" })
                        </div>

                        @Html.LabelFor(model => model.Prescription.Person.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Prescription.Person.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Prescription.Person.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Prescription.Person.LName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Prescription.Person.LName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Prescription.Person.LName, "", new { @class = "text-danger" })
                        </div>

                        @Html.LabelFor(model => model.Prescription.Person.FatherName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Prescription.Person.FatherName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Prescription.Person.FatherName, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <hr />
                    <div class="box-heade">
                        <h4 class="box-title">اطلاعات نسخه</h4>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.SearchModel.PrescFromDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="input-group col-md-4 col-lg-4">

                            @Html.TextBoxFor(model => model.SearchModel.PrescFromDate, htmlAttributes: new { @class = "form-control", data_englishnumber = "true", data_mddatetimepicker = "true", data_trigger = "click", data_targetselector = "#SearchModel_PrescFromDate", data_groupid = "group1", data_enabletimepicker = "false", data_placement = "left", data_disablebeforetoday = "false" })
                            @Html.ValidationMessageFor(model => model.SearchModel.PrescFromDate, "", new { @class = "text-danger" })
                        </div>

                        @Html.LabelFor(model => model.SearchModel.PrescToDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="input-group col-md-4 col-lg-4">

                            @Html.TextBoxFor(model => model.SearchModel.PrescToDate, htmlAttributes: new { @class = "form-control", data_englishnumber = "true", data_mddatetimepicker = "true", data_trigger = "click", data_targetselector = "#SearchModel_PrescToDate", data_groupid = "group1", data_enabletimepicker = "false", data_placement = "right", data_disablebeforetoday = "false" })
                            @Html.ValidationMessageFor(model => model.SearchModel.PrescToDate, "", new { @class = "text-danger" })
                        </div>


                    </div>

                    <div class="form-group">

                        @Html.LabelFor(model => model.Prescription.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Prescription.Price, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Prescription.Price, "", new { @class = "text-danger" })
                        </div>

                        @Html.LabelFor(model => model.Prescription.Payable, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Prescription.Payable, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Prescription.Payable, "", new { @class = "text-danger" })
                        </div>


                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SearchModel.SentFromDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.SearchModel.SentFromDate, htmlAttributes: new { @class = "form-control", data_englishnumber = "true", data_mddatetimepicker = "true", data_trigger = "click", data_targetselector = "#SearchModel_SentFromDate", data_groupid = "group1", data_enabletimepicker = "false", data_placement = "left", data_disablebeforetoday = "false" })
                            @Html.ValidationMessageFor(model => model.SearchModel.SentFromDate, "", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.SearchModel.SentToDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.SearchModel.SentToDate, htmlAttributes: new { @class = "form-control", data_englishnumber = "true", data_mddatetimepicker = "true", data_trigger = "click", data_targetselector = "#SearchModel_SentToDate", data_groupid = "group1", data_enabletimepicker = "false", data_placement = "right", data_disablebeforetoday = "false" })
                            @Html.ValidationMessageFor(model => model.SearchModel.SentToDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Prescription.Period, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Prescription.Period, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Prescription.Period, "", new { @class = "text-danger" })
                        </div>


                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="جستجو" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>

<div id="Presclist">
    @if (Model.Prescriptions != null)
    {
        @Html.Partial("_Prescriptions", Model.Prescriptions)
    }

</div>

