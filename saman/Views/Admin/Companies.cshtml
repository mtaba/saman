@model IEnumerable<saman.Models.DomainModels.Company>


<div class="row" >
    <div class="col-md-12">
        <div class="form-horizontal box box-primary">
            <div class="box-heade">
                <h4 class="box-title">لیست محل های خدمت</h4>
            </div>
            <div class="box-body">
                <table class="table" >
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                         
                        <th>عملیات</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            
                            <td>
                                @Html.ActionLink("افزودن شهرستان", "AddSubCompany", new { id = item.Id }) |
                                @Html.ActionLink("ویرایش", "EditCompany", new { id = item.Id }) |
                                
                                @Html.ActionLink("حذف", "DeleteCompany", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
                </div></div></div></div>
