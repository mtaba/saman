@model IEnumerable<saman.Models.DomainModels.Person_Madraks>

<div class="row">
    <div class="col-md-12">
        <div class="form-horizontal box box-primary">
            <div class="box-heade">
                <h4 class="box-title">لیست سوابق</h4>
            </div>
            <div class="box-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Mardrak.MadrakText)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            <span class="operation">عملیات</span>
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Mardrak.MadrakText)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>

                            <td>
                                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |

 
                                @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "DeleteMadrak", MadrakId = item.Id, onclick = "return confirm('جهت حذف مطمئن هستید ؟')" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
